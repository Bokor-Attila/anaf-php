{
    "name": "andalisolutions/anaf-php",
    "description": "Description",
    "keywords": ["php", "anaf", "sdk"],
    "license": "MIT",
    "authors": [
        {
            "name": "Andrei Ciungulete",
            "email": "andrei.ciungulete@andali.ro"
        }
    ],
    "require": {
        "php": "^8.2.0",
        "ext-iconv": "*",
        "ext-libxml": "*",
        "ext-simplexml": "*",
        "guzzlehttp/guzzle": "^7.5.0",
        "php-http/discovery": "^1.19"
    },
    "require-dev": {
        "laravel/pint": "^1.24",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.0.0",
        "pestphp/pest": "^3.80.0",
        "pestphp/pest-plugin-type-coverage": "^3.6",
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.1.0",
        "symfony/var-dumper": "^6.2.2"
    },
    "autoload": {
        "psr-4": {
            "Anaf\\": "src/"
        },
        "files": [
            "src/Anaf.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "scripts": {
        "lint": "pint -v",
        "refactor": "rector --debug",
        "test:lint": "pint --test -v",
        "test:refactor": "rector --dry-run",
        "test:types": "phpstan analyse --ansi",
        "test:type-coverage": "pest --type-coverage --min=90",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:refactor",
            "@test:types",
            "@test:unit",
            "@test:type-coverage"
        ]
    }
}
